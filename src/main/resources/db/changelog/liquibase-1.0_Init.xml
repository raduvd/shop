    </changeSet>
    <changeSet author="vancear" id="5">
        <preConditions onFail="MARK_RAN">
            <not>
                <sequenceExists sequenceName="SEQ_PRODUCT"/>
            </not>
        </preConditions>
        <comment>If sequence already exists, leave it unaffected</comment>
        <createSequence cacheSize="20" cycle="false" incrementBy="1" maxValue="9223372036854775807" minValue="1"
                        sequenceName="SEQ_PRODUCT" startValue="1"/>
    </changeSet>
    <changeSet author="vancear" id="6">
        <preConditions onFail="MARK_RAN">
            <not>
                <sequenceExists sequenceName="SEQ_PRODUCT_CATEGORY"/>
            </not>
        </preConditions>
        <comment>If sequence already exists, leave it unaffected</comment>
        <createSequence cacheSize="20" cycle="false" incrementBy="1" maxValue="9223372036854775807" minValue="1"
                        sequenceName="SEQ_PRODUCT_CATEGORY" startValue="1"/>
    </changeSet>
    <changeSet author="vancear" id="7">
        <preConditions onFail="MARK_RAN">
            <not>
                <sequenceExists sequenceName="SEQ_SUPPLIER"/>
            </not>
        </preConditions>
        <comment>If sequence already exists, leave it unaffected</comment>
        <createSequence cacheSize="20" cycle="false" incrementBy="1" maxValue="9223372036854775807" minValue="1"
                        sequenceName="SEQ_SUPPLIER" startValue="1"/>
    </changeSet>


